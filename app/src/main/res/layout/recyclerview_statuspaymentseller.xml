<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:backgroundTint="@color/blue" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date: "
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsbold"
                android:id="@+id/tvDate" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading...... "
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="70dp"
                android:textSize="16dp"
                android:fontFamily="@font/garamond"
                android:id="@+id/tvLoadingDate" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dari: "
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsbold"
                android:id="@+id/tvFrom"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading...... "
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"
                android:textSize="16dp"
                android:fontFamily="@font/garamond"
                android:id="@+id/tvLoadingFrom" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Rekening: "
                android:textColor="@color/white"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsbold"
                android:id="@+id/tvNoRekening"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading...... "
                android:textColor="@color/white"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="130dp"
                android:textSize="16dp"
                android:fontFamily="@font/garamond"
                android:id="@+id/tvLoadingNoRekening" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nominal: "
                android:textColor="@color/white"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsbold"
                android:id="@+id/tvNominal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading...... "
                android:textColor="@color/white"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="100dp"
                android:textSize="16dp"
                android:fontFamily="@font/garamond"
                android:id="@+id/tvLoadingNominal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bukti Transfer: "
                android:textColor="@color/white"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsbold"
                android:id="@+id/tvBuktiTransfer"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading...... "
                android:textColor="@color/white"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="140dp"
                android:textSize="16dp"
                android:fontFamily="@font/garamond"
                android:id="@+id/tvLoadingBuktiTransfer" />

            <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Setuju"
            android:id="@+id/btnSetuju"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="16dp"
            app:cornerRadius="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Batal"
                android:id="@+id/btnBatal"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="250dp"
                app:cornerRadius="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>